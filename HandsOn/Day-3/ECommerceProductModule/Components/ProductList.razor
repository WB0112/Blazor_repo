@inject ECommerceProductModule.Services.AppState State
@implements IDisposable
<h3>ProductList</h3>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in State.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => State.Select(product.Id)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => State.Delete(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {

    public void Dispose()
    {
        State.OnChange -= Refresh;
    }
    protected override void OnInitialized()
    {
        State.OnChange += Refresh;
    }
    void Refresh()
    {
        InvokeAsync(StateHasChanged);
        
    }
}
