<h3>Status Filter</h3>
<select class="form-control" @onchange="OnStatusChanged">
    <option value="">All</option>
    <option>Pending</option>
    <option>Approved</option>
    <option>Rejected</option>
</select>
@code {
    [Parameter]
    public EventCallback<string> OnFilterChanged{ get; set; }
    async Task OnStatusChanged(ChangeEventArgs e)
    {
        var selectedStaus = e.Value?.ToString();
        await OnFilterChanged.InvokeAsync(selectedStaus);
    }
}
