@page "/getall"
@using Blazor.Web.Models
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Admin")]
@inject ApiClient ApiClient
<h3>GetAll</h3>
@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-success mb-3" @onclick='() => Navigation.NavigateTo("/add")'>Add New Product</button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditProduct(product.Id)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Product>? products;
    protected override async Task OnInitializedAsync()
    {
        products = await ApiClient.GetAsync<List<Product>>("api/product");
    }
    private void EditProduct(int id)
    {
        // Navigate to edit page or open edit modal
        Navigation.NavigateTo($"/edit/{id}");
    }
    private async Task DeleteProduct(int id)
    {
         await ApiClient.DeleteAsync($"api/product/{id}");
        
            products = products?.Where(p => p.Id != id).ToList();
        
    }

}
