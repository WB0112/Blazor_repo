@using BlazorAzureOpenAI.Services
@inject OpenAIService AI

<h3>Smart Text Area</h3>

<textarea @bind="input" rows="5" class="form-control"></textarea>
<button class="btn btn-primary mt-2" @onclick="Improve">Improve</button>

<p class="mt-3"><b>AI Output:</b></p>
<div class="alert alert-info">@output</div>

@code {
    string input;
    string output;

    async Task Improve()
    {
        output = await AI.ImproveTextAsync(input);
    }
}