@inject HandsOnBlazorNavigationAndRouting.Services.AppState AppState
@inject NavigationManager Navigation
@rendermode InteractiveServer
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HandsOnBlazorNavigationAndRouting</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contact">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Contact
            </NavLink>
        </div>
        @if (AppState.IsAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="get-users">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> ViewUsers
                </NavLink>
            </div>
        }
        @if (AppState.IsAdmin||AppState.IsUser)
        {
            <div class="nav-item px-3">
                <button type="button"
                        class="nav-link"
                        @onclick="LogOut">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> LogOut
                </button>
            </div>
        }
    </nav>
</div>
@code
{
    private async Task LogOut()
    {
        AppState.Clear();
        await Task.Yield(); // allows render cycle to complete
        Navigation.NavigateTo("/login", replace: true);
    }
}

